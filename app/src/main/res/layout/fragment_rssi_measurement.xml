<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.mydns.diams.guidingdrone.Layout.RssiMeasurement">


    <Button
        android:id="@+id/rssi_measurement_take_off_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="スタート" />

    <TextView
        android:id="@+id/rssi_measurement_rssi_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RSSI："
        android:textSize="16dp"
        android:layout_below="@+id/rssi_measurement_take_off_button"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/rssi_measurement_stop_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/rssi_measurement_take_off_button"
        android:text="ストップ" />

    <TextView
        android:id="@+id/rssi_measurement_filename_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rssi_measurement_rssi_textView"
        android:text="ファイル名："
        android:textSize="16dp" />

    <TextView
        android:id="@+id/rssi_measurement_isconnected_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="isConnected：" />
</RelativeLayout>
